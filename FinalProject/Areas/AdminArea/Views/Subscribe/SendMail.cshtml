
@{
    ViewData["Title"] = "SendMail";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <p class="card-description">
                    Create Category Form
                </p>

                <form method="post" asp-action="SendMail" class="forms-sample" >
                    <div class="form-group">
                        <label >Send</label>
                        <input name="message" class="form-control" placeholder="Write your message">
                    </div>

            

                    <button type="submit" class="btn btn-primary mr-2"> Submit </button>
                    <a asp-action="index"> <btn style="background-color:midnightblue;cursor:pointer;padding:10px"> Back </btn> </a>
                </form>
            </div>
        </div>
    </div>
</div>



