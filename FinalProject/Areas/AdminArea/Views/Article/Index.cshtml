@model List<Articles>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blog Table</h4>
                    <p class="card-description">
                        <a asp-controller="article" asp-action="Create"> <btn style="background-color:lawngreen;cursor:pointer;padding:10px"> Create </btn>  </a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>

                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Desc</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img width="100" height="100" src="~/assets/images/popular-categories/@item.ImageUrl" />
                                        </td>

                                        <td>
                                            <p>@item.Title</p>
                                        </td>
                                          <td>
                                            <p>@item.Desc</p>
                                        </td>

                                        <td>
                                            <a asp-action="delete" asp-route-id="@item.Id"> <btn style="background-color:red;cursor:pointer;position:absolute;margin-top:35px;margin-left:-20px;padding:6px"> Delete </btn></a>
                                            <a asp-action="update" asp-route-id="@item.Id"> <btn style="background-color:chartreuse;cursor:pointer;position:absolute;margin-left:-20px;padding:3px"> Update </btn></a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

