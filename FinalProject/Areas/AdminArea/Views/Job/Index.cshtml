@model List<JobInfo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Course Table</h4>
                    <p class="card-description">
                        <a asp-controller="job" asp-action="Create"> <btn style="background-color:lawngreen;cursor:pointer;padding:10px"> Create </btn>  </a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>

                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Company</th>
                                    <th>Price</th>
                                    <th>CategoryName</th>
                                    <th>CityName</th>
                                    <th>JobDesc</th>
                                    <th>Skill</th>
                                     <th>Email</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img width="100" height="100" src="~/assets/images/popular-categories/@item.ImageUrl" />
                                        </td>


                                        <td>
                                            @item.Title
                                        </td>

                                          <td>
                                            @item.Company
                                        </td>

                                        <td>
                                            @item.Price
                                        </td>

                                      

                                        <td>
                                            @item.Category.Name
                                        </td>

                                        <td>
                                            @item.City.Name
                                        </td>

                                         <td>
                                            <p>@item.JobDesc</p>
                                        </td>

                                        <td>
                                            <p>@item.Skill</p>
                                        </td>

                                        <td>
                                            <p>@item.EmailAddress</p>
                                        </td>
                                        

                                        <td>
                                          
                                            <a asp-action="delete" asp-route-id="@item.Id"> <btn style="background-color:red;cursor:pointer;position:absolute;margin-top:40px;margin-left:-1300px;padding:6px"> Delete </btn></a>
                                            <a asp-action="update" asp-route-id="@item.Id"> <btn style="background-color:chartreuse;cursor:pointer;position:absolute;margin-top:80px;margin-left:-1300px;padding:3px"> Update </btn></a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
