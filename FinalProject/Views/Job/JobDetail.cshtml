    <!-- HEADER END -->
    <!-- Content -->
    <div class="page-content bg-white">

        <div class="sf-job-benner sf-overlay-wrapper">
            <div class="banner-job-row">
                <div class="sf-overlay-main" style="opacity:0;"></div>
                <div class="sf-banner-job-heading-wrap">
                    <div class="sf-banner-job-heading-area">
                        <div class="sf-banner-job-logo-pic"><img src="@Model.Work" alt=""></div>
                        <div class="sf-banner-job-heading-large">@Model.Title</div>
                        <ul class="sf-banner-job-dutation">
                           
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="section-content ">
            <!-- Left & right section start -->
            <div class="container">
                <!--Job Information Start-->
                <div class="sf-job-details-fileds sf-job-details-fileds-two">
                    <ul class="job-listing-meta meta">
                        <li class="location">
                            <span class="job-meta-icon"><img src="~/assets/images/job-cin/location.png" alt=""></span>
                            <div class="sf-job-meta-info">
                                <h5 class="job-meta-title">Location:</h5>
@*                                <span class="job-meta-text"><a class="google_map_link" href="http://maps.google.com/" target="_blank">@Model.City.Name</a></span>*@
                            </div>
                        </li>
                        <li>
                            <span class="job-meta-icon"><img src="~/assets/images/job-cin/money.png" alt=""></span>
                            <div class="sf-job-meta-info">
                                <h5 class="job-meta-title">Price:</h5>
                                <span class="job-meta-text text-red">@Model.Price</span>
                            </div>
                        </li>
                        <li class="job-type hourly">
                            <span class="job-meta-icon"><img src="~/assets/images/job-cin/brifcase.png" alt=""></span>
                            <div class="sf-job-meta-info">
                                <h5 class="job-meta-title">Job Hours</h5>
                                <span class="job-meta-text">9:00-18:00</span>
                            </div>
                        </li>
                        <li class="location">
                            <span class="job-meta-icon"><img src="~/assets/images/job-cin/tag.png" alt=""></span>
                            <div class="sf-job-meta-info">
                                <h5 class="job-meta-title">Categories:</h5>
                                <span class="job-meta-text">@Model.Category</span>
                            </div>
                        </li>
                        <li>
                            <span class="job-meta-icon"><img src="~/assets/images/job-cin/clock.png" alt=""></span>
                            <div class="sf-job-meta-info">
                                <h5 class="job-meta-title">Job Days</h5>
                                <span class="job-meta-text">Bazar Ertesi-Cume</span>
                            </div>
                        </li>
                        <li class="date-posted">
                            <span class="job-meta-icon"><img src="~/assets/images/job-cin/user.png" alt=""></span>
                            <div class="sf-job-meta-info">
                                <h5 class="job-meta-title">Deadline </h5>
                                <span class="job-meta-text">15 April</span>
                            </div>
                        </li>
                    </ul>
                </div>
                <!--Job Information End-->

                <div class="row">

                    <!-- Left part start -->
                    <div class="col-lg-8 col-md-12">
                        <!--Job Description Start-->



                        <h3>Job Description</h3>

                       <p> @Model.JobDesc </p>@*

                        <h3>Key Responsibilities</h3>

                        <p> @Model.KeyResponse   </p>*@

                        <br>

                        <h3>Skill &amp; Experience</h3>

                       <p>  @Model.Skill   </p>

                        <br>



                    </div>
                    <!-- Left part END -->
                    <!-- Side bar start -->
                    <div class="col-lg-4 col-md-12">

                        <aside class="sf-jobdetail-sidebar">

                            <div class="sf-jobdetail-blocks">
                                <span id="ApplyNow">   <a class="sf-btn-large2"  style="cursor:pointer">Apply Now <i class="fa fa-send"></i>   </a></span>
                                <div style="font-size:1.5rem;position:absolute;margin-left:120px;margin-top:-50px;display:none" id="Gmail"><a href="https://mail.google.com/mail/u/0/#inbox">javidsm@code.edu.az</a></div>
                            </div>
                            <!--Share this post-->
                            @*    <div class="sf-jobdetail-blocks">
                                <h4 class="sf-title">Share this post</h4>
                                <ul class="sf-con-social">
                                    <li><a href="#" class="sf-fb"><img src="~/assets/images/contact-us/facebook.png" alt="">Facebook</a></li>
                                    <li><a href="#" class="sf-twitter"><img src="~/assets/images/contact-us/twitter.png" alt="">Twitter</a></li>
                                    <li><a href="#" class="sf-pinterest"><img src="~/assets/images/contact-us/pinterest.png" alt="">Pinterest</a></li>
                                </ul>
                            </div>*@
                            <!--Job Post-->
                            <div class="sf-jobdetail-blocks">
                                <div class="sf-related-jobs">
                                    <div class="sf-related-job-pic">
                                        
                                        <img src="@Model.ImageUrl" alt="">
                                    </div>
                                    <div class="sf-related-job-location">
                                       
                                    </div>
                                    <div class="sf-related-job-name">
                                        @Model.Title  <span class="feather-check"></span>
                                    </div>
                                    <div class="sf-related-job-rating">
                                        <span class="fa fa-star"></span>
                                        <span class="fa fa-star"></span>
                                        <span class="fa fa-star"></span>
                                        <span class="fa fa-star"></span>
                                        <span class="fa fa-star text-gray"></span>
                                        <span class="sf-rating-lable"> 5 Ratings </span>
                                    </div>
                                </div>
                            </div>
                      

                        </aside>

                    </div>
                    <!-- Side bar END -->

                </div>
            </div>
        </div>

    </div>


