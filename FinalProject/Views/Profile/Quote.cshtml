@model Quote
@{
    ViewData["Title"] = "Quote";
}


<form asp-controller="profile" asp-action="Quote" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Name" name="name" type="text" required class="form-control">
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Email</label>
                <input asp-for="EmailAddress" name="emailaddress" type="text" required class="form-control">
                <span asp-validation-for="EmailAddress"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Phone</label>
                <input asp-for="Phone" name="phone" type="text" required class="form-control">
                <span asp-validation-for="Phone"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label>Message</label>

                <input asp-for="Message" name="message" type="text" required class="form-control">
                <span asp-validation-for="Message"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group text-center qout-submit-btn">
                <input type="submit" value="Send information" class="site-button">
            </div>
        </div>
    </div>
</form>

